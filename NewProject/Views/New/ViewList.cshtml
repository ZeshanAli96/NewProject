@model IList<Student>


<br>

<a href="/New/AddStudent" class="btn btn-warning">Add Student</a>
<br>
<br>
<h3> Total Students: @Model.Count()</h3>
<form method="post">

    <input type="text" name="name" id="name" placeholder="search by name" />
    <input type="text" name="sclass" id="sclass" placeholder="search by class" />
    <input type="text" name="department" id="department" placeholder="search by Department" />
    <input type="submit" value="Search" />
</form>
<table id="mytable" name="mytable" class="table table-bordered">
    <thead>
        <tr>
            <td>ID:</td>
            <td>Name:</td>
            <td>Father Name:</td>
            <td>Class:</td>
            <td>Depratment:</td>
            <td>Description</td>
        </tr>
        </thead>
    <tbody>
        @foreach (Student S in Model)
        {
            <tr>
                <td>@S.Id</td>
                <td>@S.Name</td>
                <td>@S.FatherName</td>
                <td>@S.Class</td>
                <td>@S.Department</td>
                <td>
                    <a href="/New/StudentDetail?Id=@S.Id" class="btn btn-success "><span class="glyphicon glyphicon-floppy-open"></span> Detail</a>
                    <a href="/New/EditDetail?Id=@S.Id" class="btn btn-warning "><span class="glyphicon glyphicon-pencil"></span> Edit</a>
                    <a href="#" data-studentid="@S.Id" class="btn btn-danger DeleteStudent"><span class="glyphicon glyphicon-remove"></span> Delete</a>

                </td>
            </tr>

        }
    </tbody>
    
</table>

@section Scripts
    {
    <script>

        $(function () {




            $('.DeleteStudent').click(function () {
                var clickedbutton = $(this);
                var studentid = $(this).data("studentid");
                $(this).text("Procession");
                $.ajax({
                    url: "/new/deletestudent",
                    type: "POST",
                    data: {
                        Id: studentid,
                        Email: "a@a.com"
                    },
                    complete: function (myresult) {



                        if (myresult.responseText == "Yes") {
                            clickedbutton.parent().parent().addClass("danger");
                            clickedbutton.parent().parent().fadeOut(5000);
                           
                        } else {
                            alert("Please try again");
                        }
                    }
                });


            });
        });

    </script>


}
